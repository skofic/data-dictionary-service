{
    "name": "Data-Dictionary",
    "version": "0.0.0",
    "description": "Data dictionary service.",
    "engines": {
        "arangodb": "^3.0.0"
    },
    "author": "Milko Škofič",
    "license": "Apache 2",
    "main": "main.js",
    "scripts": {
        "setup": "scripts/setup.js",
        "teardown": "scripts/teardown.js"
    },
    "configuration": {
        "adminCode": {
            "description": "Default administrator user code.",
            "type": "string",
            "required": true,
            "default": "admin"
        },
        "adminPass": {
            "description": "Default administrator user password.",
            "type": "password",
            "required": true,
            "default": "secret"
        },
        "managerCode": {
            "description": "Default services manager code.",
            "type": "string",
            "required": true,
            "default": "manager"
        },
        "managerPass": {
            "description": "Default services user password.",
            "type": "password",
            "required": true,
            "default": "secret"
        },
        "userCode": {
            "description": "Default services user code.",
            "type": "string",
            "required": true,
            "default": "user"
        },
        "userPass": {
            "description": "Default services user password.",
            "type": "password",
            "required": true,
            "default": "secret"
        },
        "dataDir": {
            "description": "Data directory name",
            "type": "string",
            "required": true,
            "default": "data"
        },
        "language": {
            "description": "Default language ISO code.",
            "type": "string",
            "required": true,
            "default": "iso_639_3_eng"
        },
        "method": {
            "description": "Hashing algorithm for creating password hashes",
            "type": "string",
            "required": true,
            "default": "sha256"
        },
        "saltLength": {
            "description": "Length of the salts that will be generated for password hashes",
            "type": "integer",
            "required": true,
            "default": 16
        },
        "secretLength": {
            "description": "Length of the cookie secret",
            "type": "integer",
            "required": true,
            "default": 48
        },
        "timeToLive": {
            "description": "Cppkie timeout period in seconds, defaults to one week",
            "type": "integer",
            "required": true,
            "default": 604800
        },
        "collectionTerm": {
            "description": "Terms collection name",
            "type": "string",
            "required": true,
            "default": "terms"
        },
        "collectionEdge": {
            "description": "Edges collection name",
            "type": "string",
            "required": true,
            "default": "edges"
        },
        "collectionTopo": {
            "description": "Topography collection name",
            "type": "string",
            "required": true,
            "default": "topos"
        },
        "collectionUser": {
            "description": "Users collection name",
            "type": "string",
            "required": true,
            "default": "users"
        },
        "collectionSession": {
            "description": "Sessions collection name",
            "type": "string",
            "required": true,
            "default": "sessions"
        },
        "collectionError": {
            "description": "Errors collection name",
            "type": "string",
            "required": true,
            "default": "errors"
        },
        "collectionLog": {
            "description": "Logs collection name",
            "type": "string",
            "required": true,
            "default": "logs"
        },
        "collectionCharacterisation": {
            "description": "Characterisation data collection name",
            "type": "string",
            "required": true,
            "default": "characterisation"
        }
    },
    "tests": [
        "test/functions/test_ItWorks.js",

        "test/functions/test_ItWorks.js",

        "test/functions/test_validateDescriptor.js",
        "test/functions/test_validateDataBlock.js",

        "test/functions/test_validateScalar.js",
        "test/functions/test_validateArray.js",
        "test/functions/test_validateSet.js",
        "test/functions/test_validateDictionary.js",

        "test/functions/test_validateValue.js",

        "test/functions/test_validateBoolean.js",
        "test/functions/test_validateInteger.js",
        "test/functions/test_validateNumber.js",
        "test/functions/test_validateTimestamp.js",
        "test/functions/test_validateString.js"
    ]
}
